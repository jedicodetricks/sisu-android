<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:id="@+id/leaderboard_list_thumbnail" android:layout_height="70dp" android:layout_width="70dp" android:contentDescription="@string/thumbnail" android:src="@drawable/client_icon" android:scaleType="centerInside" android:layout_marginTop="6dp" android:layout_marginStart="4dp" android:layout_marginBottom="6dp" android:layout_centerVertical="true" android:layout_alignParentStart="true"/>

    <RelativeLayout android:id="@+id/leaderboard_list_text_layout" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerVertical="true" android:layout_toEndOf="@id/leaderboard_list_thumbnail">

        <TextView android:id="@+id/leaderboardItemTitle" android:layout_height="wrap_content" android:layout_width="wrap_content" tools:text="Title" android:textSize="18dp" android:layout_marginRight="8dp" android:layout_marginLeft="30dp"/>
        <TextView android:id="@+id/leaderboardItemSubTitle" android:layout_height="wrap_content" android:layout_width="wrap_content" tools:text="Subtitle" android:textSize="15dp" android:layout_marginRight="8dp" android:layout_marginLeft="30dp" android:layout_marginTop="25dp"/>

    </RelativeLayout>

    <RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerVertical="true" android:id="@+id/leaderboard_list_score_layout" android:layout_toEndOf="@id/leaderboard_list_text_layout">

        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/leaderboardScore" tools:text="9000" android:textSize="18dp" android:layout_marginRight="8dp" android:layout_marginLeft="30dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/blah_list_thumbnail_list_thumbnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/leaderboard_list_thumbnail"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/leaderboard_list_score_layout"
        android:contentDescription="@string/thumbnail"
        android:scaleType="centerInside"
        android:src="@drawable/leaderboard_grey" />



</RelativeLayout>
