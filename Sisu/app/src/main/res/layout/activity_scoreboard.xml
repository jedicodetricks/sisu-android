<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout android:layout_height="match_parent"
        android:layout_width="150dp">
        <android.support.v4.widget.NestedScrollView android:layout_height="match_parent"
            android:layout_width="match_parent">
            <LinearLayout android:layout_height="match_parent"
                android:layout_width="match_parent">


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:minHeight="180dp"
tools:context="co.sisu.mobile.activities.MainActivity"
tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@color/colorDarkGrey"
        android:backgroundTint="@color/colorDarkGrey"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/leaderBoardView"
        style="@style/ToolBar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="10dp"
        android:contentDescription="leaderboard"
        android:tint="@color/colorCorporateGrey"
        app:layout_constraintStart_toEndOf="@+id/recordView"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/leaderboard_grey" />

    <ImageView
        android:id="@+id/moreView"
        style="@style/ToolBar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:contentDescription="leaderboard"
        android:tint="@color/colorCorporateGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintStart_toEndOf="@+id/leaderBoardView"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/more_grey" />

    <ImageView
        android:id="@+id/recordView"
        style="@style/ToolBar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:contentDescription="record"
        android:tint="@color/colorCorporateGrey"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/record_grey" />

    <ImageView
        android:id="@+id/reportView"
        style="@style/ToolBar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="10dp"
        android:contentDescription="reports"
        android:tint="@color/colorCorporateGrey"
        app:layout_constraintEnd_toStartOf="@+id/recordView"
        app:layout_constraintStart_toEndOf="@+id/scoreboardView"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/reports_grey" />

    <ImageView
        android:id="@+id/scoreboardView"
        style="@style/ToolBar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorDarkGrey"
        android:contentDescription="scoreboard"
        android:tint="@color/colorCorporateOrange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/home_orange" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/contactsProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/circularBar"
        android:layout_height="@dimen/circularBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="80dp"
        android:max="500"
        android:progress="0"
        android:progressDrawable="@drawable/circular"
        app:layout_constraintBottom_toTopOf="@+id/bbSignedProgress"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/contactsProgressText"
        android:layout_width="@dimen/circularBarLabel"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Contacts"
        style="@style/ProgressText"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/contactsProgress"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/contactsProgress"
        app:layout_constraintTop_toBottomOf="@+id/contactsProgress" />

<com.mikhaellopez.circularprogressbar.CircularProgressBar
    android:id="@+id/bbSignedProgress"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="@dimen/circularBar"
    android:layout_height="@dimen/circularBar"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="40dp"
    android:layout_marginStart="80dp"
    android:max="500"
    android:progress="0"
    android:progressDrawable="@drawable/circular"
    app:layout_constraintBottom_toTopOf="@+id/underContractProgress"
    app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bbSignedProgressText"
        android:layout_width="@dimen/circularBarLabel"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="BB Signed"
        style="@style/ProgressText"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/bbSignedProgress"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bbSignedProgress"
        app:layout_constraintTop_toBottomOf="@+id/bbSignedProgress" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/underContractProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/circularBar"
        android:layout_height="@dimen/circularBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="80dp"
        android:max="500"
        android:progress="0"
        android:progressDrawable="@drawable/circular"
        app:layout_constraintBottom_toTopOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/underContractProgressText"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:text="Under Contract"
        style="@style/ProgressText"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/underContractProgress"
        app:layout_constraintStart_toStartOf="@+id/underContractProgress"
        app:layout_constraintTop_toBottomOf="@+id/underContractProgress" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/appointmentsProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/circularBar"
        android:layout_height="@dimen/circularBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="80dp"
        android:max="500"
        android:progress="0"
        android:progressDrawable="@drawable/circular"
        app:layout_constraintBottom_toTopOf="@+id/listingsTakenProgress"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/appointmentsProgressText"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:text="Appointments"
        style="@style/ProgressText"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/appointmentsProgress"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/appointmentsProgress"
        app:layout_constraintTop_toBottomOf="@+id/appointmentsProgress" />

<com.mikhaellopez.circularprogressbar.CircularProgressBar
    android:id="@+id/listingsTakenProgress"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="@dimen/circularBar"
    android:layout_height="@dimen/circularBar"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="40dp"
    android:layout_marginEnd="80dp"
    android:max="500"
    android:progress="0"
    android:progressDrawable="@drawable/circular"
    app:layout_constraintBottom_toTopOf="@+id/closedProgress"
    app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/listingsTakenProgressText"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Listings Taken"
        style="@style/ProgressText"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/listingsTakenProgress"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="@+id/listingsTakenProgress"
        app:layout_constraintTop_toBottomOf="@+id/listingsTakenProgress" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/closedProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/circularBar"
        android:layout_height="@dimen/circularBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="80dp"
        android:max="500"
        android:progress="0"
        android:progressDrawable="@drawable/circular"
        app:layout_constraintBottom_toTopOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/closedProgressText"
        android:layout_width="@dimen/circularBarLabel"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Closed"
        style="@style/ProgressText"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/closedProgress"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="@+id/closedProgress"
        app:layout_constraintTop_toBottomOf="@+id/closedProgress" />

    <Spinner
        android:id="@+id/timelineSelector"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/addView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/add_icon" />

    <TextView
        android:id="@+id/underContractLabel"
        style="@style/ScoreboardLabelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Under Contract"
        app:layout_constraintEnd_toEndOf="@+id/contactsProgress"
        app:layout_constraintStart_toStartOf="@+id/contactsProgress"
        app:layout_constraintTop_toBottomOf="@+id/topDivider" />

    <View
        android:id="@+id/topDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        style="@style/TimelineText"
        android:background="@color/colorCorporateGrey"
        app:layout_constraintEnd_toEndOf="@+id/timelineSelector"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/timelineSelector"
        app:layout_constraintTop_toBottomOf="@+id/timelineSelector" />

    <View
        android:id="@+id/bottomDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorCorporateGrey"
        app:layout_constraintEnd_toEndOf="@+id/timelineSelector"
        app:layout_constraintStart_toStartOf="@+id/timelineSelector"
        app:layout_constraintTop_toBottomOf="@+id/underContractAmount" />

    <TextView
        android:id="@+id/closedLabel"
        style="@style/ScoreboardLabelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Closed"
        app:layout_constraintEnd_toEndOf="@+id/appointmentsProgress"
        app:layout_constraintStart_toStartOf="@+id/appointmentsProgress"
        app:layout_constraintTop_toBottomOf="@+id/topDivider" />

    <TextView
        android:id="@+id/underContractAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_regular"
        android:text="$56,085"
        android:textAlignment="center"
        android:textColor="@color/colorLightGrey"
        android:textSize="@dimen/font_largest"
        app:layout_constraintEnd_toEndOf="@+id/underContractLabel"
        app:layout_constraintStart_toStartOf="@+id/underContractLabel"
        app:layout_constraintTop_toBottomOf="@+id/underContractLabel" />

    <TextView
        android:id="@+id/closedAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto_regular"
        android:text="$91,862"
        android:textAlignment="center"
        android:textColor="@color/colorLightGrey"
        android:textSize="@dimen/font_largest"
        app:layout_constraintEnd_toEndOf="@+id/closedLabel"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/closedLabel"
        app:layout_constraintTop_toBottomOf="@+id/closedLabel" />

</android.support.constraint.ConstraintLayout>


</android.support.v4.widget.SlidingPaneLayout>


