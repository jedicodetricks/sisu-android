<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView android:layout_height="70dp" android:layout_width="70dp" android:contentDescription="@string/thumbnail" tools:src="@mipmap/ic_launcher" android:scaleType="centerInside" android:layout_marginTop="6dp" android:layout_marginStart="4dp" android:layout_marginBottom="6dp" android:layout_centerVertical="true" android:layout_alignParentStart="true" android:id="@+id/leaderboard_list_thumbnail"/>

        <RelativeLayout
            android:id="@+id/record_list_text_layout"
            style="@style/ScoreboardLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/leaderboard_list_thumbnail">

                <TextView
                    android:id="@+id/record_list_title"
                    style="@style/ScoreboardLabelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    tools:text="Title" />

        </RelativeLayout>

</RelativeLayout>
