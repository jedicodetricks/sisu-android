<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/upperLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/addTransactionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Add Transaction"
            app:layout_constraintEnd_toStartOf="@id/transactionButtonGuideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addTransactionButton" />

        <ImageView
            android:id="@+id/addTransactionButton"
            android:layout_width="60dp"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@id/transactionButtonGuideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/add_icon" />


        <TextView
            android:id="@+id/appointmentSentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Appointment Set"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/transactionButtonGuideline"
            app:layout_constraintTop_toBottomOf="@id/appointmentSetButton" />

        <ImageView
            android:id="@+id/appointmentSetButton"
            android:layout_width="60dp"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/transactionButtonGuideline"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/add_icon" />

        <TextView
            android:id="@+id/appointmentMetView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Appointment Met"
            app:layout_constraintEnd_toStartOf="@id/transactionButtonGuideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appointmentMetButton" />

        <ImageView
            android:id="@+id/appointmentMetButton"
            android:layout_width="60dp"
            android:layout_height="64dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toStartOf="@id/transactionButtonGuideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addTransactionView"
            app:srcCompat="@drawable/add_icon" />


        <TextView
            android:id="@+id/signedView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Signed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/transactionButtonGuideline"
            app:layout_constraintTop_toBottomOf="@id/signedButton" />

        <ImageView
            android:id="@+id/signedButton"
            android:layout_width="60dp"
            android:layout_height="64dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/transactionButtonGuideline"
            app:layout_constraintTop_toBottomOf="@id/appointmentSentView"
            app:srcCompat="@drawable/add_icon" />

        <TextView
            android:id="@+id/underContractView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Under Contract"
            app:layout_constraintEnd_toStartOf="@+id/transactionButtonGuideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/underContractButton" />

        <ImageView
            android:id="@+id/underContractButton"
            android:layout_width="60dp"
            android:layout_height="64dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toStartOf="@id/transactionButtonGuideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appointmentMetView"
            app:srcCompat="@drawable/add_icon" />


        <TextView
            android:id="@+id/closedView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Closed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/transactionButtonGuideline"
            app:layout_constraintTop_toBottomOf="@id/closedButton" />

        <ImageView
            android:id="@+id/closedButton"
            android:layout_width="60dp"
            android:layout_height="64dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/transactionButtonGuideline"
            app:layout_constraintTop_toBottomOf="@id/signedView"
            app:srcCompat="@drawable/add_icon" />

        <android.support.constraint.Guideline
            android:id="@+id/transactionButtonGuideline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
