<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="18dp"
    >

        <android.support.constraint.ConstraintLayout
            android:id="@+id/upperLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            >

            <TextView
                android:id="@+id/addTransactionView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Transaction"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="83dp" />

            <ImageView
                android:id="@+id/addTransactionButton"
                android:layout_width="60dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/addTransactionView"
                app:layout_constraintHorizontal_bias="0.585"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/add_icon" />


            <TextView
                android:id="@+id/appointmentSentView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Appointment Set"
                app:layout_constraintTop_toBottomOf="@+id/appointmentSetButton"
                tools:layout_editor_absoluteX="180dp" />

            <ImageView
                android:id="@+id/appointmentSetButton"
                android:layout_width="60dp"
                android:layout_height="64dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/add_icon" />

            <TextView
                android:id="@+id/appointmentMetView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Appointment Met"
                app:layout_constraintTop_toBottomOf="@+id/appointmentMetButton"
                tools:layout_editor_absoluteX="4dp" />

            <ImageView
                android:id="@+id/appointmentMetButton"
                android:layout_width="60dp"
                android:layout_height="64dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addTransactionButton"
                app:srcCompat="@drawable/add_icon" />


            <TextView
                android:id="@+id/signedView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Signed"
                app:layout_constraintTop_toBottomOf="@+id/signedButton"
                tools:layout_editor_absoluteX="232dp" />

            <ImageView
                android:id="@+id/signedButton"
                android:layout_width="60dp"
                android:layout_height="64dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appointmentSetButton"
                app:srcCompat="@drawable/add_icon" />

            <TextView
                android:id="@+id/underContractView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Under Contract"
                app:layout_constraintTop_toBottomOf="@+id/underContractButton"
                tools:layout_editor_absoluteX="12dp" />

            <ImageView
                android:id="@+id/underContractButton"
                android:layout_width="60dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="52dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/underContractView"
                app:layout_constraintHorizontal_bias="0.727"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appointmentMetButton"
                app:srcCompat="@drawable/add_icon" />


            <TextView
                android:id="@+id/closedView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Closed"
                app:layout_constraintTop_toBottomOf="@+id/closedButton"
                tools:layout_editor_absoluteX="232dp" />

            <ImageView
                android:id="@+id/closedButton"
                android:layout_width="60dp"
                android:layout_height="64dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signedButton"
                app:srcCompat="@drawable/add_icon" />

        </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
