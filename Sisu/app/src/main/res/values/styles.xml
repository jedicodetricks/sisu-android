<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:background">@color/colorAlmostBlack</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/colorAlmostBlack</item>
    </style>

    <style name="TimelineText">
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorLightGrey</item>
    </style>

    <style name="ProgressText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorLightGrey</item>
    </style>

    <style name="ScoreboardLabelText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorLabelText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SpinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorLightGrey</item>
    </style>

    <style name="SpinnerDropdownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorLightGrey</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:background">@color/colorCorporateGrey</item>
    </style>

    <style name="ToolBar">
        <item name="android:background">@color/colorDarkGrey</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorLabelText</item>
    </style>

</resources>
